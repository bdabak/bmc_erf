<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<ActionSheet showCancelButton="true" placement="Auto" buttons="{employeeRequestView>/formActions}">
		<Button text="{= ${employeeRequestView>Noact} ? ${employeeRequestView>Erfbx} (${i18n>NO_APPROVERS}): ${employeeRequestView>Erfbx} }"
			icon="{employeeRequestView>Erfbi}" press="onFormActionSelected" enabled="{= !${employeeRequestView>Noact} }"
			type="{ path:'employeeRequestView>Erfbs', formatter: '.formatter.getFormActionType' }" cd:buttonId="{employeeRequestView>Erfbt}"/>
	</ActionSheet>
</core:FragmentDefinition>