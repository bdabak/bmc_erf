<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns:rte="sap.ui.richtexteditor">
	<l:VerticalLayout width="100%">
		<Panel headerText="{i18n>POSTING_POSITION_INFO}" class="erfReviewPanel">
			<f:SimpleForm editable="false" layout="ResponsiveGridLayout" labelSpanXL="1" labelSpanL="1" labelSpanM="1" labelSpanS="12"
				adjustLabelSpan="false" emptySpanXL="5" emptySpanL="5" emptySpanM="5" emptySpanS="0">
				<Label text="{i18n>POSTING_COMPANY}"/>
				<Text text="{internalJobPostingModel>postingData/Butxt}"/>
				<Label text="{i18n>POSTING_ORGUNIT}"/>
				<Text text="{internalJobPostingModel>postingData/Orgtx}"/>
				<Label text="{i18n>POSTING_POSITION}"/>
				<Text text="{internalJobPostingModel>postingData/Plstx}"/>
				<Label text="{i18n>POSTING_BEGIN_DATE}"/>
				<Text text="{path:'internalJobPostingModel>postingData/Begda', type:'sap.ui.model.type.Date',formatOptions: { pattern: 'dd.MM.yyyy'}}"/>
				<Label text="{i18n>POSTING_END_DATE}"/>
				<Text text="{path:'internalJobPostingModel>postingData/Endda', type:'sap.ui.model.type.Date',formatOptions: { pattern: 'dd.MM.yyyy'}}"/>
				<Label text="{i18n>POSTING_STATUS}"/>
				<CheckBox editable="false" selected="{internalJobPostingModel>/postingData/Jpsta}"/>
			</f:SimpleForm>
		</Panel>
		<Panel headerText="{i18n>POSTING_REQUIRED_QUALIFICATIONS}" class="erfReviewPanel">
			<FormattedText htmlText="{internalJobPostingModel>postingData/Erfrq}"/>
		</Panel>
		<Panel headerText="{i18n>POSTING_JOB_DESCRIPTION}" class="erfReviewPanel">
			<FormattedText htmlText="{internalJobPostingModel>postingData/Erfjd}"/>
		</Panel>
	</l:VerticalLayout>
</core:FragmentDefinition>