<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<TableSelectDialog title="{i18n>EMPLOYEE_SEARCH}" class="sapUiPopupWithPadding" items="{GenericServices>/EmployeeSearchSet}"
		search="onEmployeeSearch" confirm="onEmployeeSelect" contentWidth="{= ${device>/system/phone} ? '100%' : '75%'}">
		<ColumnListItem>
			<cells>
				<Image src="/sap/opu/odata/sap/ZHCM_GENERIC_SRV/EmployeeSearchSet('{GenericServices>Pernr}')/$value" tooltip="{i18n>EMPLOYEE_PICTURE}"
					width="50px"
					class="sapUxAPObjectPageHeaderContentImageContainer sapUxAPObjectPageHeaderObjectImage-Circle sapMImg sapMImgFocusable sapUxAPObjectPageHeaderObjectImage"></Image>
				<HBox alignItems="Center">
					<ObjectStatus icon="{= ${GenericServices>Stat2} === '3' ? 'sap-icon://status-positive' : 'sap-icon://status-inactive' }"
						state="{= ${GenericServices>Stat2} === '3' ? 'Success' : 'Error' }"
						tooltip="{= ${GenericServices>Stat2} === '3' ? 'Aktif çalışan' : 'İnaktif çalışan' }" class="sapUiTinyMarginEnd"/>
					<ObjectIdentifier title="{GenericServices>Pernr}" text="{GenericServices>Ename}"/>
				</HBox>
				<Text text="{GenericServices>Plstx}"/>
				<Text text="{GenericServices>Orgtx}"/>
				<Text text="{GenericServices>Pbtxt}-{GenericServices>Btrtx}"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column width="5rem">
				<header>
					<Text text="{i18n>EMPLOYEE_PICTURE}"/>
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>EMPLOYEE_NAME}"/>
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="{i18n>EMPLOYEE_POSITION}"/>
				</header>
			</Column>
			<Column minScreenWidth="Large" demandPopin="true">
				<header>
					<Text text="{i18n>EMPLOYEE_ORGUNIT}"/>
				</header>
			</Column>
			<Column minScreenWidth="Large" demandPopin="true">
				<header>
					<Text text="{i18n>EMPLOYEE_PERS_AREA}"/>
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>