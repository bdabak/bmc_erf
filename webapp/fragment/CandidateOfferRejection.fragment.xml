<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns="sap.m" xmlns:table="sap.ui.table" xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>CANDIDATE_REJECTED_OFFER_TITLE}" showHeader="true" stretch="{device>/system/phone}"
		id="idCandidateOfferRejectionDialog" resizable="false" draggable="false" type="Message" afterClose="onCandidateOfferRejectionClosed"
		state="Warning">
		<content>
			<VBox>
				<Label text="{i18n>CANDIDATE_OFFER_REJECTION_REASON}" required="true" labelFor="idCandidateOfferRejectionDialogReason"></Label>
				<ComboBox id="idCandidateOfferRejectionDialogReason" required="true"
					items="{ path:'/CandidateValueHelpSet' , filters:[{path: 'Help' , operator : 'EQ' , value1 : 'Cporr'} ] }"
					selectedKey="{candidateModel>/OfferRejectionDialogProperties/Reason}">
					<core:Item key="{Key}" text="{Text}"></core:Item>
				</ComboBox>
				<Label text="{i18n>CANDIDATE_OFFER_REJECTION_EXPLANATION}" labelFor="idCandidateOfferRejectionDialogReasonExplanation"></Label>
				<TextArea id="idCandidateOfferRejectionDialogReasonExplanation" value="{candidateProcessModel>/OfferRejectionDialogProperties/Explanation}"
					valueLiveUpdate="true" width="100%" placeholder="{i18n>CANDIDATE_OFFER_REJECTION_EXPLANATION_PLACEHOLDER}" rows="5"></TextArea>
			</VBox>
		</content>
		<beginButton>
			<Button type="Reject" icon="sap-icon://order-status" text="{i18n>CONTINUE_ACTION}" press="onCandidateOfferRejectionConfirmed"
				enabled="{= ${candidateModel>/OfferRejectionDialogProperties/Reason} !== '' }"></Button>
		</beginButton>
		<endButton>
			<Button type="Default" text="{i18n>CANCEL_ACTION}" press="onCandidateOfferRejectionCancelled"></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>