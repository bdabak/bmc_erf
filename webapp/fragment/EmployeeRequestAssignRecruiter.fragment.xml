<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>ASSIGN_TO_RECRUITER}" type="Message" state="Warning">
		<content>
			<f:Form editable="true">
				<f:layout>
					<f:ResponsiveGridLayout labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0"
						emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="{i18n>CURRENT_RECRUITER}">
								<f:fields>
									<Text text="{recruitmentAdminModel>/changeRecruiterAction/CurrentRecruiterName}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>TARGET_RECRUITER}">
								<f:fields>
									<ComboBox required="true" selectedKey="{recruitmentAdminModel>/changeRecruiterAction/TargetRecruiter}"
										items="{recruitmentAdminModel>/recruiterList}">
										<core:Item key="{recruitmentAdminModel>Fldky}" text="{recruitmentAdminModel>Fldvl}"/>
									</ComboBox>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</content>
		<beginButton>
			<Button text="{i18n>ASSIGN_TO_RECRUITER}" type="Accept" press="onChangeFormRecruiterConfirmed"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>CANCEL_ACTION}" type="Reject" press="onChangeFormRecruiterCancelled"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>