<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Panel headerText="{i18n>USER_INFORMATION_FORM}" class="sapUiContentPadding">
		<f:Form editable="true">
			<f:layout>
				<f:ResponsiveGridLayout labelSpanXL="2" labelSpanL="2" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="5" emptySpanL="6"
					emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"/>
			</f:layout>
			<f:formContainers>
				<f:FormContainer title="1- {i18n>USER_INFO}">
					<f:formElements>
						<f:FormElement label="{i18n>NAME_SURNAME}">
							<f:fields>
								<Input value="{candidateProcessModel>/CandidateUserForm/Ename}" editable="false"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>PREFERRED_NAME}">
							<f:fields>
								<Input value="{candidateProcessModel>/CandidateUserForm/Nmprf}" editable="false"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>BMC_POSITION}">
							<f:fields>
								<Input value="{candidateProcessModel>/CandidateUserForm/Plstx}" editable="false"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>PLANNED_BEGIN_DATE}">
							<f:fields>
								<DatePicker editable="false"
									value="{path:'candidateProcessModel>/CandidateUserForm/Plbeg', type: 'sap.ui.model.type.Date', formatOptions:{ UTC: true, pattern: 'dd.MM.yyyy'}}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>MANAGER_NAME}">
							<f:fields>
								<Input value="{candidateProcessModel>/CandidateUserForm/Mngnm}" editable="false"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>DEPARTMENT_NAME}">
							<f:fields>
								<Input value="{candidateProcessModel>/CandidateUserForm/Deptx}" editable="false"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>HEAD_OFFICE_NAME}">
							<f:fields>
								<Input value="{candidateProcessModel>/CandidateUserForm/Heatx}" editable="false"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>CONTRACT_TYPE}">
							<f:fields>
								<ComboBox editable="false" selectedKey="{candidateProcessModel>/CandidateUserForm/Cntty}"
									items="{ path:'/ValueHelpSet', filters : [ { path : 'Erfvh', operator : 'EQ', value1 : 'Cntty'} ] }">
									<core:Item key="{Fldky}" text="{Fldvl}"/>
								</ComboBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>CONTRACT_END_DATE}" visible="{= ${candidateProcessModel>/CandidateUserForm/Cntty} === '2'}">
							<f:fields>
								<DatePicker editable="false"
									value="{path:'candidateProcessModel>/CandidateUserForm/Cnted', type: 'sap.ui.model.type.Date', formatOptions:{ UTC: true, pattern: 'dd.MM.yyyy'}}"
									placeholder="{i18n>SELECT_CONTRACT_END_DATE}"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
		<f:Form editable="true" formContainers="{candidateProcessModel>/CandidateUserForm/CandidateUserFormSectionSet}">
			<f:layout>
				<f:ResponsiveGridLayout labelSpanXL="0" labelSpanL="0" labelSpanM="0" labelSpanS="0" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0"
					emptySpanM="0" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" class="myGridLayout"/>
			</f:layout>
			<f:formContainers>
				<f:FormContainer title="{candidateProcessModel>Seqno}- {candidateProcessModel>Usrfx}"
					formElements="{path:'candidateProcessModel>CandidateUserFormElementSet', templateShareable:false}">
					<f:formElements>
						<f:FormElement>
							<f:fields>
								<CheckBox tooltip="{candidateProcessModel>Usrfy}" selected="{candidateProcessModel>Issel}" text="{candidateProcessModel>Usrfy}"
									class="sapUiTinyMarginEnd">
									<layoutData>
										<l:GridData span="XL3 L3 M4 S12" linebreak="{= ${candidateProcessModel>Frmso} === 'N'}"/>
									</layoutData>
								</CheckBox>
								<Label text="{candidateProcessModel>Frmnl}" class="sapUiTinyMarginTop sapUiTinyMarginEnd"
									visible="{= ${candidateProcessModel>Frmso} === 'N'}">
									<layoutData>
										<l:GridData span="XL1 L1 M2 S12"/>
									</layoutData>
								</Label>
								<TextArea value="{candidateProcessModel>Descr}" rows="2" visible="{= ${candidateProcessModel>Frmso} === 'N'}"
									editable="{candidateProcessModel>Issel}">
									<layoutData>
										<l:GridData span="XL4 L4 M6 S12"/>
									</layoutData>
								</TextArea>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
		<Toolbar>
			<ToolbarSpacer/>
			<Button type="Accept" icon="sap-icon://save" press="onSavePreviewUserForm"></Button>
		</Toolbar>
	</Panel>
</core:FragmentDefinition>