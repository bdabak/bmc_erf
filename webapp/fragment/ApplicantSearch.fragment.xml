<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<TableSelectDialog title="{i18n>APPLICANT_SEARCH}" class="sapUiPopupWithPadding" items="{/CandidateSet}" search="onApplicantSearch"
		confirm="onApplicantSelected" contentWidth="{= ${device>/system/phone} ? '100%' : '75%'}">
		<ColumnListItem>
			<cells>
				<Image src="/sap/opu/odata/sap/ZHCM_RECRUITMENT_SRV/CandidateSet(Tclas='{Tclas}',Pernr='{Pernr}')/$value" tooltip="{i18n>EMPLOYEE_PICTURE}"
					width="50px"
					class="sapUxAPObjectPageHeaderContentImageContainer sapUxAPObjectPageHeaderObjectImage-Circle sapMImg sapMImgFocusable sapUxAPObjectPageHeaderObjectImage"></Image>
				<Text text="{Pernr}"/>
				<Text text="{Ename}"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column>
				<header>
					<Text text="{i18n>EMPLOYEE_PICTURE}"/>
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>APPLICANT_NUMBER}"/>
				</header>
			</Column>
			<Column >
				<header>
					<Text text="{i18n>APPLICANT_NAME}"/>
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>