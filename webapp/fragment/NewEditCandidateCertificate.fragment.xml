<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<!--search="onF4ValueHelpSearch"-->
	<Dialog cd:operation="{candidateModel>/type/operation}" title="{i18n>CERTIFICATE_INFORMATION}" cd:path="{candidateModel>/type/path}"
		contentWidth="40%">
		<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12"
			adjustLabelSpan="false" emptySpanXL="2" emptySpanL="2" emptySpanM="2" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
			singleContainerFullSize="false">
			<f:content>
				<Label text="{i18n>Zbelg}"/>
				<ComboBox items="{ path:'/CandidateValueHelpSet' , filters:[{path: 'Help' , operator : 'EQ' , value1 : 'Zbelg' } ] }"
					selectedKey="{candidateModel>/CandidateCertificateLine/Zbelg}">
					<core:Item key="{Key}" text="{Text}"></core:Item>
				</ComboBox>
				<Label text="{i18n>Zkurm}"/>
				<TextArea value="{candidateModel>/CandidateCertificateLine/Zkurm}" maxLength="30"/>
				<Label text="{i18n>Zbolm}"/>
				<TextArea value="{candidateModel>/CandidateCertificateLine/Zbolm}" maxLength="30"/>
				<Label text="{i18n>Zznot}"/>
				<TextArea value="{candidateModel>/CandidateCertificateLine/Zznot}" maxLength="30"/>
				<Label text="{i18n>Ztarh}"/>
				<DatePicker
					value="{path: 'candidateModel>/CandidateCertificateLine/Ztarh', type: 'sap.ui.model.type.Date', formatOptions: {UTC:true, pattern: 'dd.MM.yyyy'}}"></DatePicker>
				<Label text="{i18n>Zgecr}"/>
				<DatePicker value="{path: 'candidateModel>/CandidateCertificateLine/Zgecr', type: 'sap.ui.model.type.Date', formatOptions: {UTC:true, pattern: 'dd.MM.yyyy'}}"></DatePicker>
			</f:content>
		</f:SimpleForm>
		<beginButton>
			<Button type="Accept" text="{i18n>Accept}" press="onDialogSave" cd:model="CandidateCertificate"/>
		</beginButton>
		<endButton>
			<Button type="Reject" text="{i18n>Reject}" press="onDialogCancel" cd:model="CandidateCertificate"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>