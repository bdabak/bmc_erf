<mvc:View controllerName="com.bmc.hcm.erf.controller.CandidateProcess" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:smod="smod.ui5.controls.src.controls"
	xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<smod:CustomSideBar id="idCustomSideBar" navItemSelected="onNavItemSelected" navData="{candidateProcessModel>/SidebarData/navigationData}"
		visible="{candidateProcessModel>/SidebarData/visible}" profileTitle="{i18n>CANDIDATE_INFO}" footerNavigationVisible="true"
		navButtonPressed="onNavBack">
		<smod:content>
			<NavContainer id="idPageNavigationContainer">
				<pages>
					<Page id="idMainCandidateProcessPage" class="erfProcessPage" title="{i18n>CANDIDATE_PROCESS_ACTIONS}" cd:defaultPage="true"></Page>
					<Page id="idCandidateProcessHistoryPage" showFooter="false" class="erfProcessPage" title="{i18n>PROCESS_HISTORY}" cd:defaultPage="true">
						<core:Fragment fragmentName="com.bmc.hcm.erf.fragment.CandidateProcessHistory" type="XML"/>
					</Page>
					<Page id="idCandidateProcessSummaryPage" showFooter="true" class="erfProcessPage" title="{i18n>CANDIDATE_PROCESS_SUMMARY}"
						cd:defaultPage="true">
						<content>
							<core:Fragment fragmentName="com.bmc.hcm.erf.fragment.CandidateProcessSummaryAdmin" type="XML"/>
						</content>
					</Page>
					<Page id="idNextCandidateProcessPage" showFooter="true" class="erfProcessPage" title="{i18n>CANDIDATE_PROCESS_ACTIONS}"
						cd:defaultPage="true" showNavButton="true"></Page>
				</pages>
			</NavContainer>
		</smod:content>
		<smod:brandImageExpanded>
			<Image src="/sap/opu/odata/sap/ZHCM_GENERIC_SRV/MimeInfoSet('%2FSAP%2FPublic%2FCustom_Images%2Fbrand_logo.png')/$value" width="35px"
				height="21px"/>
		</smod:brandImageExpanded>
		<smod:mainProfileInfo>
			<smod:CustomSideBarProfile profileData="{candidateProcessModel>/SidebarData/candidateInfo}"></smod:CustomSideBarProfile>
		</smod:mainProfileInfo>
		<smod:infoTabs>
			<smod:CustomSideBarStatus statusData="{candidateProcessModel>/SidebarData/candidateStatusInfo}" tabTitle="İşe Alım Süreci" tabCount="1"></smod:CustomSideBarStatus>
			<smod:CustomSideBarProfile profileData="{candidateProcessModel>/SidebarData/requestOwnerInfo}" tabTitle="Talep Sahibi" tabCount="2"></smod:CustomSideBarProfile>
			<smod:CustomSideBarStatus statusData="{candidateProcessModel>/SidebarData/requestStatusInfo}" tabTitle="Talep Bilgileri" tabCount="3"></smod:CustomSideBarStatus>
		</smod:infoTabs>
		<smod:actionMenu>
			<ActionSheet title="{i18n>CANDIDATE_ACTIONS}" showCancelButton="true" placement="Bottom">
				<Button text="{i18n>EDIT_EMAIL_ADDRESS}" icon="sap-icon://arobase" press="onCandidateEmailDialog"/>
			</ActionSheet>
		</smod:actionMenu>
		<!--<smod:footer>-->
		<!--	<FlexBox width="100%" justifyContent="Center">-->
		<!--		<Button icon="sap-icon://nav-back" press="onNavBack" text="{i18n>BACK_ACTION}"></Button>-->
		<!--	</FlexBox>-->
		<!--</smod:footer>-->
	</smod:CustomSideBar>
</mvc:View>