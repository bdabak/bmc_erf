<mvc:View controllerName="com.bmc.hcm.erf.controller.EmployeeRequest" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic" xmlns:footerbar="sap.ushell.ui.footerbar" xmlns:core="sap.ui.core">
	<Page id="idEmployeeRequestMainPage" title="{i18n>NEW_EMPLOYEE_REQUEST_FORM}" floatingFooter="true" busy="{employeeRequestView>/busy}"
		busyIndicatorDelay="0" showHeader="true" showNavButton="true" navButtonPress="onCancelForm">
		<content>
			<core:Fragment fragmentName="com.bmc.hcm.erf.fragment.EmployeeRequestChange" type="XML"/>
		</content>
		<footer>
			<OverflowToolbar visible="true">
				<ToolbarSpacer/>
				<!--<Button text="{i18n>SAVE_ACTION}" icon="sap-icon://save" type="Emphasized" press="onSaveForm"/>-->
				<!--<Button text="{i18n>SEND_ACTION}" icon="sap-icon://paper-plane" type="Accept" press="onSendForm"/>-->
				<Button id="idFormActionsButton" busyIndicatorDelay="0" icon="sap-icon://menu2" type="Emphasized" tooltip="{i18n>ACTION_LIST}"
					press="onOpenFormActions" text="{i18n>ACTION_LIST}" visible="false"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>